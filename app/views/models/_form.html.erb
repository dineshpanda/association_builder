<% was_validated = model.errors.any? %>

<%= form_with(model: model, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = model.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% model.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% idea_class = "form-control" %>
    <% idea_was_invalid = model.errors.include?(:idea) %>

    <% if was_validated %>
      <% if idea_was_invalid %>
        <% idea_class << " is-invalid" %>
      <% else %>
        <% idea_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :idea_id %>
    <%= f.collection_select :idea_id, Idea.all, :id, :to_s, {}, class: "form-control" %>
    <% if idea_was_invalid %>
      <% model.errors.full_messages_for(:idea).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
