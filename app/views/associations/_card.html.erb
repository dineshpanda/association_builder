<div class="card mb-3">
  <h2 class="card-header h4">
    Association #<%= association.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= association.name %></dd>
      <!-- Display name end -->

      <dt>Source association</dt>
      <!-- Display source_association_id start -->
      <dd><%= association.source_association_id %></dd>
      <!-- Display source_association_id end -->

      <dt>Through association</dt>
      <!-- Display through_association_id start -->
      <dd><%= association.through_association_id %></dd>
      <!-- Display through_association_id end -->

      <dt>Origin model</dt>
      <!-- Display origin_model_id start -->
      <dd><%= association.origin_model_id %></dd>
      <!-- Display origin_model_id end -->

      <dt>Terminus model</dt>
      <!-- Display terminus_model_id start -->
      <dd><%= association.terminus_model_id %></dd>
      <!-- Display terminus_model_id end -->

      <dt>Foreign key</dt>
      <!-- Display foreign_key start -->
      <dd><%= association.foreign_key %></dd>
      <!-- Display foreign_key end -->

      <dt>Nature</dt>
      <!-- Display nature start -->
      <dd><%= association.nature %></dd>
      <!-- Display nature end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back association, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link association start -->
      <div class="col">
        <%= link_to edit_association_url(association), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link association end -->

      <!-- Delete link association start -->
      <div class="col">
        <%= link_to association, method: :delete, data: { confirm: "Do you really want to delete this association?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link association end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(association.updated_at) %> ago
  </div>
</div>
